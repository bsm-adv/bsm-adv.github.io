---
import Container from "../site/Container.astro";
import Title from "../site/Title.astro";
import Card from "./Card.astro";
import { pekerjaan } from "../../data/pekerjaan";
---

<Container class="px-4 py-24">

    <Container class="text-center mb-12">
        <Title
            as="h2"
            title="Our Work"
            description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        />
    </Container>

    <Container class="flex flex-col gap-12 max-w-(--breakpoint-lg)">

        {pekerjaan.map((item) => (

            <Card
                label={item.label}
                nukilan={item.nukilan}
                gambar={item.gambar[0]}
                href={`/work/${item.slug}`}
                imgRight={item.slug !== "branding"}
            />

        ))}

    </Container>

</Container>
