---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    label: string;
    nukilan: string
    gambar: ImageMetadata;
    href: string;
    imgRight?: boolean;
    class?: string;
};

const {
    label,
    nukilan,
    gambar,
    href,
    class: className,
    imgRight = false,
} = Astro.props as Props;

---

<div class:list={["flex flex-col md:flex-row gap-6 md:gap-12 md:items-center", className]}>

    <div class:list={["md:basis-1/2 flex justify-center items-center overflow-hidden aspect-4/3", imgRight ? "md:order-1" : "md:order-0"]}>
        <Image
            src={gambar}
            alt={label}
            class="object-cover max-w-none w-auto h-full"
            loading="lazy"
        />
    </div>

    <div class:list={["md:basis-1/2", imgRight ? "md:text-right md:order-0" : "md:order-1"]}>

        <h3>{label}</h3>

        <p class="mt-2 mb-6 md:my-12">{nukilan}</p>

        <a href={href} title={`Buka halaman ${label}`}
            class="inline-block px-3 py-2 hover:text-blue-600 border border-neutral-300 hover:border-neutral-500 transition-all"
        >
            Detail {label} &raquo;
        </a>

    </div>

</div>
