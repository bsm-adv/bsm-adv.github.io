---
import Container from "../site/Container.astro";

interface StatItem {
    label: string;
    final: number;
    unit?: string;
    divisor?: number;
    precision?: number;
    duration?: number;
    bg: string;
}

const stats: StatItem[] = [
    { label: "Years of Experience", final: 10, bg: "https://picsum.photos/id/69/768/576" },
    { label: "Strategic Point", final: 1000, unit: "K+", bg: "https://picsum.photos/id/214/768/576" },
    { label: "Happy Clients", final: 10000, unit: "K+", bg: "https://picsum.photos/id/815//768/576" },
    // { label: "Approval Rating", final: 4.9, precision: 1, bg: "https://picsum.photos/id/619/768/576" },
];
---

<Container class="flex flex-col md:flex-row max-w-none" data-stats>

    {stats.map((stat, i) => (

        <Container class="max-md:max-w-none md:basis-1/3 md:max-w-1/3 py-24 bg-black text-white text-center text-shadow-sm" imgUrl={stat.bg}>

            <div
                class="text-5xl lg:text-6xl font-bold relative z-10"
                data-counter
                data-final={stat.final}
                data-unit={stat.unit ?? ''}
                data-precision={stat.precision ?? 0}
                data-index={i}
            >
                0
            </div>
            <div class="uppercase mt-2 relative z-10">{stat.label}</div>

        </Container>

    ))}

</Container>

<script src="../../scripts/statsCounter.js"></script>
